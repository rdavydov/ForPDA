<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/compat_list_item_root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/compat_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/news_text_size"
                android:textStyle="bold|italic"
                android:textColor="@color/text_color"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp16"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                tools:text="Какая-та чуп-чуп новостя. Читай быстрей если не из ряда плятей."/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/compat_list_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/news_second_text_size"
                    android:textColor="@color/text_drawer_item_color"
                    tools:text="25 cентября 2016"/>

                <TextView
                    android:id="@+id/compat_list_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author"
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp8"
                    android:textSize="@dimen/news_second_text_size"
                    android:textColor="@color/text_drawer_item_color"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
        </RelativeLayout>
        <com.lid.lib.LabelImageView
            android:id="@+id/compat_list_item_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/dp16"
            android:scaleType="centerCrop"
            app:label_orientation="RIGHT_TOP"
            app:label_text="New"
            app:label_backgroundColor="#f5f5f5"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>